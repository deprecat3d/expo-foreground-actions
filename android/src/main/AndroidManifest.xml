<manifest>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application>
        <!--
          Uses 'dataSync' type which is ideal for:
          - File uploads/downloads
          - Data synchronization
          - Background processing

          Note: For other background tasks like location tracking or media playback,
          use dedicated Expo packages (expo-location, expo-av) instead.
        -->
        <service
            android:name=".ExpoForegroundActionsService"
            android:foregroundServiceType="dataSync"/>
    </application>
</manifest>
